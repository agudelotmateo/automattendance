<!DOCTYPE html>
<html>

<% include partials/head.ejs %>

<body>
    <% include partials/navbar.ejs %>

    <h3>List of courses</h3>
    <ul>
        <% for (const course of courses) { %>
            <li> <%= course.name %> </li>
        <% } %>
    </ul>

    <h3>Course Administration</h3>
    <form action="/createCourse" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label for="coursename">Course name</label>
            <input type="text" class="form-control" name="name" id="coursename">
        </div>
        <div class="form-group">
            <label for="students">Name</label>
            <textarea name="students" id="students" cols="30" rows="10">List of students (e.g.: MateoAgudeloToro,JuanPabloAlcarazFlorez,LinaMariaBeltranDurango)</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add course</button>
    </form>

    <h3>Delete course</h3>
    <form action="/deleteCourse" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label for="coursename">Course name</label>
            <input type="text" class="form-control" name="name" id="coursename">
        </div>
        <button type="submit" class="btn btn-primary">DELETE course</button>
    </form>

    <% include partials/bootstrap.ejs %>
</body>

</html>