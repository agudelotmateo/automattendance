<!DOCTYPE html>
<html>

<% include partials/head.ejs %>

<body>

    <% include partials/navbar.ejs %>

    <div class="contenido_ggral">
  
        <div class="encabezado_asis">
            <div class="ico_asis_estudiante">
            </div>
            <div class="tit_asis_ppal">
            <span class="titulo_content">Perfil: <%= name %></span><br>
            </div>
        </div>  

        <div class="img_perfil">
            <% if (image !== '') { %>
                <img src=<%= image %>> 
            <%  } %>
        </div>         

        <div>          
            <div class="caja_central">        
                
                <span class="titulo_caja">Actualizar información:</span><br><br>       

                <form action="/updateUser" method="POST" enctype="multipart/form-data"> 
                    <span>Nombre:</span><br>
                    <span class="explicacion_pequeña">No más de 20 caracteres</span>
                    <input class="campo_captura" type="text" name="name" id="username" maxlength="20" value=<%= name %>> <br>                    
                    <span>Foto:</span><br>
                    <input class="select_atta" type="file" name="picture" id="picture" accept="application/x-zip-compressed,image/*">
                    <br><br><br>
                    <div class="boton_enviar">         
                        <input class="boton_asist" type="submit" value="Actualizar">
                    </div>                
                </form>

            </div>    

            <br><br><br><br>            
            <div></div>
        </div>

    </div>

    <% include partials/bootstrap.ejs %>	
   
    <% include partials/footer.ejs %>

</body>

</html>